@model IEnumerable<Application_Trial.Models.Story>
@foreach (var item in Model)
{
    <div>
        <h4>Task</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.Display("Story ID")
            </dt>
            <dd>
                @Html.DisplayFor(model => item.StoryID)
            </dd>
            <dt>
                @Html.Display("Name")
            </dt>
            <dd>
                @Html.DisplayFor(model => item.Name)
            </dd>
            <dt>
                @Html.Display("No Of Tasks")
            </dt>
            <dd>
                @Html.DisplayFor(model => item.Nooftasks)
            </dd>
            <dt>
                @Html.Display("Department")
            </dt>
            <dd>
                @Html.DisplayFor(model => item.Department)
            </dd>
            <dt>
                @Html.Display("Description")
            </dt>
            <dd>
                @Html.DisplayFor(model => item.Description)
            </dd>

        </dl>

    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@item.StoryID">Edit</a> |
        <a asp-action="Delete" asp-route-id="@item.StoryID">Delete</a>
    </div>
}
